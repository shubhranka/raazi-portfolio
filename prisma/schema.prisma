generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Sadhak {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String    
  number    String
  email     String
  bookings  Booking[]
  slots     Slot[]
  createdAt DateTime @default(now())
}

model Booking {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  sadhak        Sadhak    @relation(fields: [sadhakId], references: [id])
  sadhakId      String    @db.ObjectId
  plan          Plan
  slots         Slot[]
  fees          Float
  status        String
  payment_link  String
  createdAt     DateTime  @default(now())
}

model Slot {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  day       Day
  plan      Plan
  from      Int
  to        Int
  available Boolean
  takenBy   Sadhak?  @relation(fields: [takenById], references: [id])
  takenById String?  @db.ObjectId
  booking   Booking? @relation(fields: [bookingId], references: [id])
  bookingId String?  @db.ObjectId
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
  WEEKDAY
  WEEKEND
}

enum Plan{
  GROUP
  PRIVATE
}

model Queries {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}